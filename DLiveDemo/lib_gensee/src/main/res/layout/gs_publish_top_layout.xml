<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gs_ic_title_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/gs_tv_room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gs_top_layout_margin"
        android:layout_marginTop="@dimen/gs_top_layout_margin"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="16"
        android:gravity="center"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/gs_rl_room_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gs_tv_room_title"
        android:layout_marginTop="@dimen/gs_top_layout_margin"
        android:background="@drawable/gs_ic_room_num_bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/gs_iv_room_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gs_top_layout_margin"
            android:src="@drawable/gs_ic_room_users" />

        <TextView
            android:id="@+id/gs_tv_room_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/gs_iv_room_user"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/gs_white"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/gs_live_started_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gs_rl_room_users"
        android:layout_marginLeft="@dimen/gs_top_layout_margin"
        android:layout_marginTop="4dp"
        android:text="00:00:00"
        android:textColor="@color/gs_white"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/gs_gs_iv_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/gs_top_layout_margin"
        android:layout_marginTop="@dimen/gs_top_layout_margin"
        android:src="@drawable/gs_ic_exit" />

    <!--<TextView-->
        <!--android:id="@+id/gs_record"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:padding="5dp"-->
        <!--android:text="录制"-->
        <!--android:layout_toLeftOf="@+id/gs_gs_iv_exit"-->
        <!--android:layout_marginRight="@dimen/gs_top_layout_margin"-->
        <!--android:layout_marginTop="@dimen/gs_top_layout_margin"/>-->

</RelativeLayout>